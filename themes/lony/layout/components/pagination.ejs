<nav aria-label="Page navigation">
  <ul class="pagination">
    <% if (page.prev){ %>
      <li>
        <a href="<%- config.root %><%- page.prev_link %>" aria-label="Previous">
          <span aria-hidden="true">
            <%= __('prev') %>
          </span>
        </a>
      </li>
    <% } %>
    <% if (page.next){ %>
      <li>
        <a href="<%- config.root %><%- page.next_link %>" aria-label="Next">
          <span aria-hidden="true">
            <%= __('next') %>
          </span>
        </a>
      </li>
    <% } %>
 </ul>
</nav>
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment-timezone/0.5.10/moment-timezone-with-data-2010-2020.min.js"></script>

<script>
    $(document).ready(function () {
        $('time').each(function() {
            var dateISO = $(this).attr('datetime'),
                dateFromNow = moment.utc(dateISO).fromNow();
            $(this).text(dateFromNow);
        });
    });
</script>
